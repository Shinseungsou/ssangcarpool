<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_container">

    <RelativeLayout
        android:id="@+id/signup_layout_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/signup_textview_1"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="ID"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_id"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/signup_layout_3"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_2"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_2"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="PW"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_pw"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_4"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_3"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_3"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="이름"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_5"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_4"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_4"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="닉네임"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_nickname"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_4"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_6"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_5"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_5"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="성별"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_gender"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_5"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_7"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_6"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_6"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="Phone"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_phonenumber"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_6"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_8"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_7"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_7"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_7"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/signup_signup_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/signup_layout_8"
        android:text="가입하기"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#aaf"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="16dp"/>

        </RelativeLayout>
</RelativeLayout>